<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="XAML Calculator" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="237" Margin="106,41,0,0" VerticalAlignment="Top" Width="313">
            <Label x:Name="label" Content="XAML Calculator" HorizontalAlignment="Center"/>
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="First #" GotKeyboardFocus="textBox1_GotKeyboardFocus" Margin="0,0,-0.2,0"/>
            <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Text="Second #" GotKeyboardFocus="textBox1_GotKeyboardFocus"/>
            <Button x:Name="add" Content="+" Click="add_Click" />
            <Button x:Name="subtract" Content="-" Click="subtract_Click" />
            <Button x:Name="multiply" Content="*" Click="multiply_Click"/>
            <Button x:Name="divide" Content="/" Click= "divide_Click" />
            <TextBox x:Name="answer" Height="23" TextWrapping="Wrap" Text="= "/>

        </StackPanel>

    </Grid>
</Window>
